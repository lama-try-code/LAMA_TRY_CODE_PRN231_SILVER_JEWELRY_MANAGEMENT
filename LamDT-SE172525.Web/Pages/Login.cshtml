@page
@model LamDT_SE172525.Web.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center">Login</h3>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="mb-3">
                            <label asp-for="Login.Username" class="form-label">Username</label>
                            <input asp-for="Login.Username" class="form-control" />
                            <span asp-validation-for="Login.Username" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Login.Password" class="form-label">Password</label>
                            <input asp-for="Login.Password" type="password" class="form-control" />
                            <span asp-validation-for="Login.Password" class="text-danger"></span>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Login</button>
                        </div>
                    </form>
                    @if (Model.IsSuccess.HasValue)
                    {
                        <div class="alert @(Model.IsSuccess.Value ? "alert-success" : "alert-danger") mt-3">
                            @(Model.IsSuccess.Value ? "Login successful!" : "Login failed. Please check your credentials.")
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>